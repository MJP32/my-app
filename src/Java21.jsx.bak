    // Box contains: 42 (Integer)
    // Pair: answer (String) and 42 (Integer)
    // myLabel: data
    // Success: 100
    // Failure: Error occurred
    // test, 42, true
    // Contains: 3.14
    // Double value: 42.0
    // Hello -> World
    // World (end)
  }
