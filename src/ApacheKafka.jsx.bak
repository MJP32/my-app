      // Verify replication
      DescribeTopicsResult topicDescription = adminClient.describeTopics(
        Collections.singleton("ha-topic"));

      topicDescription.allTopicNames().get().forEach((name, desc) -> {
        desc.partitions().forEach(partition -> {
